package api.lang.string;

import java.util.Scanner;

public class StringIndexofQuiz {

	public static void main(String[] args) {
		
		System.out.println("전체 문장을 입력해주세요.");
		Scanner scan = new Scanner(System.in);
		String sc = scan.next();
		
		System.out.println("찾을 단어를 입력해주세요.");
		String s = scan.next();
		
		System.out.println("찾는 인덱스 : " + sc.indexOf(s));
		System.out.println("찾는 인덱스 : " + sc.indexOf(s, 1));
		
		System.out.println("단어 찾기 종료");
		System.out.println(s + "의 개수는 ");
	}

}
